{
  "list": {
    "maxPreviewHeight": 20
  },
  "explorer": {
    "icon": {
      "enableNerdfont": true
    },
    "keyMappings.global": {
      "gt": "toggleOnlyGitChange"
    }
  },
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json"],
      "initializationOptions": {
          "cache": {
            "directory": "/home/njr/.cache/ccls",
            "retainInMemory": 0
          },
          "client": { "snippetSupport": true },
          "highlight": { "lsRanges" : true }
        }
    }
  },
  "yank": {
    "highlight": { "duration": 160 }
  }
}
